{% extends 'base.html.twig' %}

{% block title %}{{ property.title }}{% endblock %}

{% block body %}
    <main class="py-5">
        <div class="container">
            {# SHOW FLASHS START #}
                {% for label, messages in app.flashes %}    
                    {% for message in messages %}
                        <div class="alert alert-{{label}}">{{ message }}</div>
                    {% endfor %}
                {% endfor %}
            {# SHOW FLASHS END #}

            <div class="row">
                <div class="col">
                    {% if property.propertyPictures and property.propertyPictures|length > 1 %}
                        <div id="carouselExampleIndicators" class="carousel slide">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                            </div>
                            <div class="carousel-inner">
                                {% for propertypic in property.propertyPictures %}
                                    <div class="carousel-item {{ loop.index == 1 ? "active" : "" }}">
                                        <img src="{{ asset(propertypic.picture)|imagine_filter('show_carousel') }}" class="d-block w-100"  alt="">
                                    </div>    
                                {% endfor %}
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    {% elseif property.propertyPictures and property.propertyPictures|length == 1  %}
                        {% for propertypic in property.propertyPictures %}
                            <img src="{{ asset(propertypic.picture)|imagine_filter('show_carousel') }}" class="card-img-top"  alt="">
                        {% endfor %}
                    {% else %}
                        <img src="{{ asset('/images/properties/default_property_image.jpg')|imagine_filter('show_carousel') }}" class="card-img-top" alt="">
                    {% endif %}
                </div> 
            </div>
        </div>
    </div>
    <div class="container mt-4 ">
        <p>{{ property.description | nl2br }}</p>
        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristiques</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable</td>
                        <td>{{ property.surface }} m²</td>
                    </tr>
                    <tr>
                        <td>Nombres de pièces</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Nombres de chambres</td>
                        <td>{{ property.bedrooms }} pièces</td>
                    </tr>
                    <tr>
                        <td>Nombres d'étages</td>
                        <td>{{ property.floor }} pièces</td>
                    </tr>
                    <tr>
                        <td>Type de chauffage</td>
                        <td>{{ property.heatCategory }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>Spécificités</h2>
                <ul class="list-group">
                    {% for option in property.options %}
                        <li class="list-group-item">{{ option.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <style>
            #map {
            height: 400px; /* The height is 400 pixels */
            width: 100%; /* The width is the width of the web page */
            }
        </style>
        <div id="map" data-lng="{{property.lng}}" data-lat="{{property.lat}}"></div>
    </main>
                        {# Open Contact Modal Button #}
                    <button  type="button" id='contact' class="btn btn-primary  mt-5" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap">
                        Contacter l'agence
                    </button>
        
                    {# Contact Modal #}
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">New message</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    {{ form_start(form)}}
                                        <div class="row">
                                            <div class="col">{{ form_row(form.firstname) }}</div>
                                            <div class="col">{{ form_row(form.lastname) }}</div>
                                        </div>
                                        <div class="row">
                                            <div class="col">{{ form_row(form.email) }}</div>
                                            <div class="col">{{ form_row(form.phone) }}</div>
                                        </div>
                                        {{ form_rest(form) }}
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Send message</button>
                                        </div>
                                    {{ form_end(form)}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {# end of contact modal #}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('show_ property_location') }}
    <script defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDEJKOOlBwYUuW5kMSnFsJZUtAbGVsJ6tc&callback=initMap&v=weekly"></script>
{% endblock %}
