{% extends 'base.html.twig' %}

{% block title %}Tous nos biens{% endblock %}

{% block body %}
<div class="jumbotron text-center my-4">
    <div class="container">
    {{ form_start(form) }}
    <div class="row align-items-end">
        <div class="col-md-2">
            {{ form_row(form.minSurface)}}
        </div>
        <div class="col-md-2">
            {{ form_row(form.maxPrice)}}
        </div>
        <div class="col-md-3">
            {{ form_row(form.options)}}
        </div>
        <div class="col-md-3">
            <input type="text">
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <button class="btn btn-primary" type='submit'>Rechercher</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    </div>
</div>
<div class="container mt-4">
    <h1>Voir tous nos bien</h1>
    <div class="row">
        {% for property in properties %}
        <div class="col-md-4">
            {% include "property/_property.html.twig" %}
        </div>
        {% endfor %}
    </div>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(properties) }}
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('user_search_autocomplete') }}
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDEJKOOlBwYUuW5kMSnFsJZUtAbGVsJ6tc&libraries=places"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDEJKOOlBwYUuW5kMSnFsJZUtAbGVsJ6tc&callback=initAutocomplete&libraries=places&v=weekly"defer ></script>
    {{ parent() }}
{% endblock %}
